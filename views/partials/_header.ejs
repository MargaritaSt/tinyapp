    <!--button for login-->
    <% if (userId === undefined){ %>
    <form class="form-inline" action="/login" method="POST">
      <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls/register">Register</a>
          <a class="nav-item nav-link" href="/urls/login">Login</a>     
        </div>
      </form>
    <% } else { %>
      <form class="form-inline" action="/logout" method="POST">
        <label style="margin: 1em" for="longURL">Logged In As: <%=users[userId].email%></label> 
      <button type="submit">Logout</button>
      </form
   <% } %>
